@model PastaneProjesi.Models.ViewModels.ShopViewModel

@{
    ViewData["Title"] = "Ürünlerimiz";
}

<!-- Hero Section -->
<div class="py-5 bg-gradient-chocolate text-white text-center mb-5" style="background: linear-gradient(135deg, #2c1e1a 0%, #4a332d 100%);">
    <div class="container">
        <h1 class="display-4 fw-bold" style="font-family: 'Playfair Display', serif;">Tüm Lezzetlerimiz</h1>
        <p class="lead opacity-75">Özenle hazırlanan tatlılarımızı keşfedin</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <!-- Sidebar Filter -->
        <div class="col-lg-3 mb-4 mb-lg-0">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4" style="font-family: 'Playfair Display', serif; color: var(--color-warm-chocolate);">
                        <i class="fas fa-filter me-2"></i>Filtrele
                    </h5>
                    
                    <form method="get" asp-action="Index" id="filterForm">
                        <!-- Search -->
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted text-uppercase">Arama</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted small"></i></span>
                                <input type="text" name="search" value="@Model.CurrentSearch" class="form-control bg-light border-start-0" placeholder="Ürün ara...">
                            </div>
                        </div>

                        <!-- Categories -->
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted text-uppercase">Kategoriler</label>
                            <div class="d-flex flex-column gap-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="categoryId" value="" id="cat_all" @(!Model.CurrentCategory.HasValue ? "checked" : "") onchange="this.form.submit()">
                                    <label class="form-check-label" for="cat_all">
                                        Tümü
                                    </label>
                                </div>
                                @foreach (var cat in Model.Categories)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="categoryId" value="@cat.Id" id="cat_@cat.Id" @(Model.CurrentCategory == cat.Id ? "checked" : "") onchange="this.form.submit()">
                                        <label class="form-check-label" for="cat_@cat.Id">
                                            @cat.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Price Range -->
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted text-uppercase">Fiyat Aralığı</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="minPrice" value="@Model.MinPrice" class="form-control form-control-sm" placeholder="Min">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="maxPrice" value="@Model.MaxPrice" class="form-control form-control-sm" placeholder="Max">
                                </div>
                            </div>
                        </div>

                         <!-- Sort Order (Hidden in sidebar, but updated via JS or separate control if needed, 
                              adding it here to preserve state when filtering) -->
                         <input type="hidden" name="sortOrder" value="@Model.SortOrder" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-custom-primary rounded-pill">Uygula</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill btn-sm">Temizle</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="col-lg-9">
            <!-- Top Bar -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <span class="text-muted">@Model.Products.Count() ürün listeleniyor</span>
                
                <form method="get" class="d-flex align-items-center">
                    <!-- Preserve other filters -->
                    <input type="hidden" name="search" value="@Model.CurrentSearch" />
                    <input type="hidden" name="categoryId" value="@Model.CurrentCategory" />
                    <input type="hidden" name="minPrice" value="@Model.MinPrice" />
                    <input type="hidden" name="maxPrice" value="@Model.MaxPrice" />

                    <select name="sortOrder" class="form-select form-select-sm border-0 shadow-sm" style="width: auto;" onchange="this.form.submit()">
                        <option value="">Varsayılan Sıralama</option>
                        <option value="price_asc" selected="@(Model.SortOrder == "price_asc")">En Düşük Fiyat</option>
                        <option value="price_desc" selected="@(Model.SortOrder == "price_desc")">En Yüksek Fiyat</option>
                        <option value="name_asc" selected="@(Model.SortOrder == "name_asc")">İsim (A-Z)</option>
                        <option value="name_desc" selected="@(Model.SortOrder == "name_desc")">İsim (Z-A)</option>
                    </select>
                </form>
            </div>

            @if (!Model.Products.Any())
            {
                <div class="text-center py-5">
                    <div class="mb-3 text-muted opacity-25">
                        <i class="fas fa-search fa-4x"></i>
                    </div>
                    <h4>Sonuç Bulunamadı</h4>
                    <p class="text-muted">Arama kriterlerinize uygun ürün bulunamadı. Lütfen filtreleri temizleyip tekrar deneyin.</p>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var item in Model.Products)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card product-card h-100 border-0 shadow-sm" style="border-radius: 15px; overflow: hidden;">
                                <div class="card-img-wrapper position-relative" style="height: 250px;">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" class="card-img-top w-100 h-100 object-fit-cover" alt="@item.Name">
                                        }
                                        else
                                        {
                                            <div class="d-flex align-items-center justify-content-center h-100 bg-light">
                                                <i class="fas fa-image fa-3x text-muted opacity-50"></i>
                                            </div>
                                        }
                                        <div class="position-absolute top-0 end-0 m-2">
                                            <span class="badge bg-white text-dark shadow-sm">@item.Category?.Name</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="card-body p-3 text-center d-flex flex-column">
                                    <h5 class="card-title fw-bold mb-2 fs-6" style="font-family: 'Playfair Display', serif;">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none" style="color: var(--color-warm-chocolate);">@item.Name</a>
                                    </h5>
                                    
                                    <div class="mt-auto pt-3">
                                        <span class="d-block mb-3 fs-5 fw-bold text-warning" style="font-family: 'Poppins', sans-serif;">
                                            @item.Price.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                                        </span>
                                        
                                        <form onsubmit="addToCart(event, this)" asp-controller="Cart" asp-action="AddToCart" method="post">
                                            <input type="hidden" name="productId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-warning rounded-pill w-100">
                                                <i class="fas fa-shopping-basket me-2"></i>Sepete Ekle
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function addToCart(event, form) {
            event.preventDefault();
            const formData = new FormData(form);
            const button = form.querySelector('button');
            const originalContent = button.innerHTML;

            try {
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                button.disabled = true;

                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: { 'Accept': 'application/json' }
                });
                
                if (response.redirected) {
                    window.location.href = response.url;
                    return;
                }

                if (response.ok) {
                    const result = await response.json();
                     if (result.success) {
                        const badge = document.querySelector('.badge.bg-danger');
                        if (badge) badge.textContent = result.cartCount;
                        
                        button.innerHTML = '<i class="fas fa-check"></i>';
                        button.classList.replace('btn-outline-warning', 'btn-success');
                        button.classList.add('text-white');
                        
                        setTimeout(() => {
                            button.innerHTML = originalContent;
                            button.classList.replace('btn-success', 'btn-outline-warning');
                            button.classList.remove('text-white');
                            button.disabled = false;
                        }, 1000);
                    }
                }
            } catch (error) {
                console.error(error);
                button.innerHTML = 'Hata';
                setTimeout(() => { button.innerHTML = originalContent; button.disabled = false; }, 2000);
            }
        }
    </script>
}
