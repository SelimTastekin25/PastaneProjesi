@model IEnumerable<PastaneProjesi.Models.Product>
@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = null; // Using Custom Layout Structure
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sweet Delight</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <!-- Using a CDN for generic icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

<div class="admin-container">
    <!-- Sidebar -->
    <div class="admin-sidebar">
        <div class="sidebar-brand">
             Sweet Delight
        </div>
        <ul class="sidebar-menu">
            <li class="sidebar-item">
                <a href="@Url.Action("Dashboard", "Product")" class="sidebar-link active">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li class="sidebar-item">
                <a href="@Url.Action("Dashboard", "Product")" class="sidebar-link">
                    <i class="fas fa-box"></i> Ürün Listesi
                </a>
            </li>
            <li class="sidebar-item">
                <a href="@Url.Action("Create", "Product")" class="sidebar-link">
                    <i class="fas fa-plus-circle"></i> Yeni Ürün Ekle
                </a>
            </li>
            <li class="sidebar-item" style="margin-top: 2rem; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1rem;">
                <a href="/" class="sidebar-link">
                    <i class="fas fa-globe"></i> Siteye Dön
                </a>
            </li>
            <li class="sidebar-item">
                <a href="@Url.Action("Logout", "Account")" class="sidebar-link text-danger-soft">
                    <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="admin-content">
        <div class="dashboard-header">
            <h2>Dashboard</h2>
            <div class="text-muted">Hoşgeldiniz, Admin</div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Stats Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="stats-info">
                        <h6>Toplam Ürün</h6>
                        <h3>@ViewBag.TotalProducts</h3>
                    </div>
                    <div class="card-icon-wrapper bg-blue-light">
                        <i class="fas fa-cubes"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="stats-info">
                        <h6>Düşük Stok (< 5)</h6>
                        <h3>@ViewBag.CriticalStock</h3>
                    </div>
                    <div class="card-icon-wrapper bg-red-light">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="stats-info">
                        <h6>Ortalama Fiyat</h6>
                        <h3>@(ViewBag.AveragePrice != null ? Convert.ToDecimal(ViewBag.AveragePrice).ToString("C2") : "0 ₺")</h3>
                    </div>
                    <div class="card-icon-wrapper bg-green-light">
                        <i class="fas fa-tag"></i>
                    </div>
                </div>
            </div>
        </div>


        <!-- Products List -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 style="font-family: 'Playfair Display', serif;">Ürün Listesi</h4>
            <a asp-action="Create" class="btn btn-custom-outline btn-sm">
                <i class="fas fa-plus"></i> Yeni Ürün
            </a>
        </div>

        <!-- Search and Filter Form -->
        <form method="get" asp-action="Dashboard" class="mb-4">
            <div class="row g-3">
                <!-- Search Input -->
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" 
                               name="searchString" 
                               value="@ViewBag.CurrentSearch" 
                               class="form-control" 
                               placeholder="Ürün adı veya açıklamasında ara...">
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Ara
                    </button>
                </div>
            </div>

            <!-- Category Filter Buttons -->
            <div class="row mt-3">
                <div class="col-12">
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <span class="fw-bold text-muted me-2">Kategori:</span>
                        
                        <!-- "All" Button -->
                        <a asp-action="Dashboard" 
                           asp-route-searchString="@ViewBag.CurrentSearch"
                           class="btn btn-sm @(ViewBag.CurrentCategory == null ? "btn-dark" : "btn-outline-secondary")">
                            <i class="fas fa-th me-1"></i>Tümü
                        </a>

                        <!-- Category Buttons -->
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var category in ViewBag.Categories)
                            {
                                <a asp-action="Dashboard" 
                                   asp-route-categoryId="@category.Id"
                                   asp-route-searchString="@ViewBag.CurrentSearch"
                                   class="btn btn-sm @(ViewBag.CurrentCategory == category.Id ? "btn-dark" : "btn-outline-secondary")">
                                    @category.Name
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-modern">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Category)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Stock)</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <div class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@(item.Category?.Name ?? "-")</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price) ₺
                            </td>
                            <td>
                                @if(item.Stock < 5) {
                                    <span class="text-danger fw-bold">@item.Stock (Kritik)</span>
                                } else {
                                    <span class="text-success">@item.Stock</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn-edit" title="Düzenle">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn-delete" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

</body>
</html>
