@model List<PastaneProjesi.Models.Order>

@{
    ViewData["Title"] = "Sipariş Yönetimi";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Sipariş Yönetimi</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Dışa Aktar</button>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th scope="col" class="border-0">Sipariş No</th>
                        <th scope="col" class="border-0">Müşteri</th>
                        <th scope="col" class="border-0">Tarih</th>
                        <th scope="col" class="border-0">Tutar</th>
                        <th scope="col" class="border-0">Durum</th>
                        <th scope="col" class="border-0">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>#@order.Id</td>
                            <td>
                                <div>@order.User?.FullName</div>
                                <small class="text-muted">@order.User?.Email</small>
                            </td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="fw-bold">@order.TotalAmount.ToString("C2")</td>
                            <td>
                                @if (order.Status == "Teslim Edildi")
                                {
                                    <span class="badge bg-success">@order.Status</span>
                                }
                                else if (order.Status == "Hazırlanıyor")
                                {
                                    <span class="badge bg-warning text-dark">@order.Status</span>
                                }
                                else if (order.Status == "Kargoya Verildi")
                                {
                                    <span class="badge bg-info text-dark">@order.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@order.Status</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        <span class="d-none d-md-inline">Durum</span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="id" value="@order.Id" />
                                                <input type="hidden" name="status" value="Ödeme Bekliyor" />
                                                <button type="submit" class="dropdown-item">Ödeme Bekliyor</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="id" value="@order.Id" />
                                                <input type="hidden" name="status" value="Hazırlanıyor" />
                                                <button type="submit" class="dropdown-item">Hazırlanıyor</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="id" value="@order.Id" />
                                                <input type="hidden" name="status" value="Kargoya Verildi" />
                                                <button type="submit" class="dropdown-item">Kargoya Verildi</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="id" value="@order.Id" />
                                                <input type="hidden" name="status" value="Teslim Edildi" />
                                                <button type="submit" class="dropdown-item">Teslim Edildi</button>
                                            </form>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="UpdateStatus" method="post">
                                                <input type="hidden" name="id" value="@order.Id" />
                                                <input type="hidden" name="status" value="İptal Edildi" />
                                                <button type="submit" class="dropdown-item text-danger">İptal Et</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
