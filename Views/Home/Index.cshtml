@model IEnumerable<PastaneProjesi.Models.Product>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Carousel -->
<div id="heroCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active" style="height: 600px;">
            <div style="background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1578985545062-69928b1d9587?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80') center/cover no-repeat; height: 100%;">
                <div class="container h-100 d-flex align-items-center justify-content-center text-center">
                    <div class="text-white" style="max-width: 800px;">
                        <h1 class="display-3 fw-bold mb-4" style="font-family: 'Playfair Display', serif;">Tatlı Bir Kaçamak</h1>
                        <p class="lead mb-4 fs-4">Geleneksel tarifler, modern dokunuşlar. Her lokmada mutluluk.</p>
                        <a asp-controller="Shop" asp-action="Index" class="btn btn-custom-primary btn-lg rounded-pill px-5 py-3 fw-bold shadow">Alışverişe Başla</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Slide 2 (Optional) -->
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5 py-5">
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="p-4 border rounded-4 shadow-sm h-100 bg-light">
                <i class="fas fa-birthday-cake fa-3x text-warning mb-3"></i>
                <h3 class="h4 fw-bold">Taze & Günlük</h3>
                <p class="text-muted">Ürünlerimiz her gün en taze malzemelerle, katkı maddesi kullanılmadan hazırlanır.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 border rounded-4 shadow-sm h-100 bg-light">
                <i class="fas fa-shipping-fast fa-3x text-warning mb-3"></i>
                <h3 class="h4 fw-bold">Hızlı Teslimat</h3>
                <p class="text-muted">Siparişleriniz özenle paketlenir ve en kısa sürede kapınıza teslim edilir.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 border rounded-4 shadow-sm h-100 bg-light">
                <i class="fas fa-medal fa-3x text-warning mb-3"></i>
                <h3 class="h4 fw-bold">Ödüllü Lezzet</h3>
                <p class="text-muted">Şeflerimizin özel tarifleriyle hazırlanan ödüllü lezzetlerimizi keşfedin.</p>
            </div>
        </div>
    </div>
</div>

<!-- Featured Products -->
<div class="container mb-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold" style="font-family: 'Playfair Display', serif; color: var(--color-warm-chocolate);">Öne Çıkan Lezzetler</h2>
        <p class="text-muted">En çok tercih edilen ürünlerimiz</p>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card product-card h-100 border-0 shadow-sm" style="border-radius: 15px; overflow: hidden;">
                    <div class="card-img-wrapper position-relative" style="height: 250px;">
                        <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="card-img-top w-100 h-100 object-fit-cover" alt="@item.Name">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 bg-light">
                                    <i class="fas fa-image fa-3x text-muted opacity-50"></i>
                                </div>
                            }
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-white text-dark shadow-sm">@item.Category?.Name</span>
                            </div>
                        </a>
                    </div>
                    <div class="card-body p-3 text-center d-flex flex-column">
                        <h5 class="card-title fw-bold mb-2 fs-6" style="font-family: 'Playfair Display', serif;">
                             <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none" style="color: var(--color-warm-chocolate);">@item.Name</a>
                        </h5>
                        <div class="mt-auto">
                            <span class="d-block mb-3 fs-5 fw-bold text-warning" style="font-family: 'Poppins', sans-serif;">
                                @item.Price.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                            </span>
                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning rounded-pill w-100">
                                <i class="fas fa-eye me-2"></i>İncele
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="text-center mt-5">
        <a asp-controller="Shop" asp-action="Index" class="btn btn-lg btn-outline-dark rounded-pill px-5">Tüm Ürünleri Gör</a>
    </div>
</div>
