@{
    ViewData["Title"] = "İletişim";
}

<div class="row g-0 mb-5">
    <!-- Google Maps Area (Full Width or Split) -->
    <div class="col-12">
        <div style="width: 100%; height: 400px; filter: grayscale(20%);">
            <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q=Inegol%2C%20Bursa&t=&z=13&ie=UTF8&iwloc=&output=embed"></iframe>
        </div>
    </div>
</div>

<div class="container my-5">

    <div class="text-center mb-5">
        <h2 class="display-5" style="font-family: 'Playfair Display', serif; color: var(--color-warm-chocolate);">Bizimle İletişime Geçin</h2>
        <p class="lead text-muted">Tatlı krizleriniz veya özel günleriniz için bir mesaj uzağınızdayız.</p>
    </div>

    <div class="row align-items-start">
        <!-- İletişim Formu -->
        <div class="col-lg-7 mb-5 mb-lg-0">
            <div class="card border-0 shadow-lg p-5" style="border-radius: 20px;">
                <h3 class="mb-4" style="color: var(--color-warm-chocolate); font-family: 'Playfair Display', serif;">Mesaj Gönder</h3>
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-uppercase text-muted">Adınız</label>
                            <input type="text" class="form-control form-control-lg bg-light border-0" placeholder="Adınız">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-uppercase text-muted">Soyadınız</label>
                            <input type="text" class="form-control form-control-lg bg-light border-0" placeholder="Soyadınız">
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small text-uppercase text-muted">E-posta Adreiniz</label>
                            <input type="email" class="form-control form-control-lg bg-light border-0" placeholder="ornek@email.com">
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small text-uppercase text-muted">Mesajınız</label>
                            <textarea class="form-control form-control-lg bg-light border-0" rows="5" placeholder="Size nasıl yardımcı olabiliriz?"></textarea>
                        </div>
                        <div class="col-12 mt-4">
                            <button type="button" class="btn btn-custom-outline w-100 py-3 fw-bold">GÖNDER</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- İletişim Bilgileri -->
        <div class="col-lg-5 ps-lg-5">
            <div class="p-4" style="background-color: var(--color-vanilla); border-radius: 20px; color: var(--color-warm-chocolate);">
                <h3 class="mb-4" style="font-family: 'Playfair Display', serif;">İletişim Bilgileri</h3>
                
                <div class="d-flex align-items-start mb-4">
                    <div class="fs-4 me-3 text-warning"><i class="bi bi-geo-alt-fill"></i></div>
                    <div>
                        <h5 class="fw-bold mb-1">Adres</h5>
                        <p class="mb-0">Atatürk Bulvarı No: 16<br>İnegöl, Bursa, Türkiye</p>
                    </div>
                </div>

                <div class="d-flex align-items-start mb-4">
                    <div class="fs-4 me-3 text-warning"><i class="bi bi-telephone-fill"></i></div>
                    <div>
                        <h5 class="fw-bold mb-1">Telefon</h5>
                        <p class="mb-0">+90 (224) 715 00 00</p>
                    </div>
                </div>

                <div class="d-flex align-items-start mb-4">
                    <div class="fs-4 me-3 text-warning"><i class="bi bi-envelope-fill"></i></div>
                    <div>
                        <h5 class="fw-bold mb-1">E-posta</h5>
                        <p class="mb-0">info@sweetdelight.com</p>
                    </div>
                </div>

                <hr class="my-4" style="border-color: rgba(93, 64, 55, 0.2);">

                <h5 class="fw-bold mb-3">Çalışma Saatleri</h5>
                <ul class="list-unstyled">
                    <li class="d-flex justify-content-between mb-2">
                        <span>Hafta İçi:</span>
                        <span class="fw-bold">09:00 - 22:00</span>
                    </li>
                    <li class="d-flex justify-content-between">
                        <span>Hafta Sonu:</span>
                        <span class="fw-bold">10:00 - 23:00</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN (if not already included) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
