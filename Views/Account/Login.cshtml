@{
    ViewData["Title"] = "Kullanıcı Girişi";
    Layout = null; // We use a standalone layout for login to avoid navbars
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sweet Delight</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: var(--color-cream);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(93, 64, 55, 0.1); /* Chocolate shadow */
            width: 100%;
            max-width: 400px;
            text-align: center;
        }
        .login-title {
            font-family: 'Playfair Display', serif;
            color: var(--color-warm-chocolate);
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }
        .form-control {
            border-radius: 10px;
            padding: 0.8rem;
            border: 1px solid #ddd;
            margin-bottom: 1rem;
        }
        .form-control:focus {
            border-color: var(--color-accent-gold);
            box-shadow: 0 0 0 0.2rem rgba(212, 175, 55, 0.25);
        }
        .btn-login {
            background-color: var(--color-warm-chocolate);
            color: white;
            padding: 0.8rem;
            border-radius: 10px;
            width: 100%;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
        }
        .btn-login:hover {
            background-color: #4a332d;
            transform: translateY(-2px);
        }
        .alert-error {
            color: #d9534f;
            background-color: #f9f2f4;
            border-color: #ebccd1;
            padding: 10px;
            border-radius: 10px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }
        .back-link {
            display: block;
            margin-top: 1.5rem;
            color: #888;
            text-decoration: none;
            font-size: 0.9rem;
        }
        .back-link:hover {
            color: var(--color-warm-chocolate);
        }
    </style>
</head>
<body>

    <div class="login-card">
        <h1 class="login-title">Kullanıcı Girişi</h1>
        
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert-error">
                @ViewBag.ErrorMessage
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" style="border-radius: 10px; font-size: 0.9rem;">
                @TempData["SuccessMessage"]
            </div>
        }

        <form method="post" asp-action="Login">
            @Html.AntiForgeryToken()
            <input type="text" name="username" class="form-control" placeholder="Kullanıcı Adı veya E-posta" required />
            <div class="mb-3">
                <input type="password" name="password" class="form-control" placeholder="Şifreniz" required />
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <a asp-action="ForgotPassword" class="text-decoration-none small text-muted">Şifremi Unuttum</a>
            </div>

            <button type="submit" class="btn btn-custom mb-3">GİRİŞ YAP</button>
        </form>

        <div class="mt-3">
            <p class="text-muted mb-2">Hesabınız yok mu?</p>
            <a asp-action="Register" class="btn btn-outline-secondary w-100" style="border-radius: 10px;">Kayıt Ol</a>
        </div>

        <a href="/" class="back-link">← Siteye Dön</a>
    </div>

</body>
</html>
