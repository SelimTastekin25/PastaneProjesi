@model PastaneProjesi.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = null; // Standalone layout
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sweet Delight</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: var(--color-cream);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .auth-card {
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(93, 64, 55, 0.1);
            width: 100%;
            max-width: 450px;
            text-align: center;
        }
        .auth-title {
            font-family: 'Playfair Display', serif;
            color: var(--color-warm-chocolate);
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }
        .form-control {
            border-radius: 10px;
            padding: 0.8rem;
        }
        .btn-custom {
            background-color: var(--color-warm-chocolate);
            color: white;
            border-radius: 10px;
            padding: 0.8rem;
            font-weight: 600;
            width: 100%;
            border: none;
            transition: all 0.3s;
        }
        .btn-custom:hover {
            background-color: #4a332d;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="auth-card">
        <h1 class="auth-title">Şifremi Unuttum</h1>
        <p class="text-muted mb-4 small">Lütfen kayıtlı e-posta adresinizi giriniz. Size şifrenizi sıfırlamanız için bir bağlantı göndereceğiz.</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success small text-start">
                @TempData["SuccessMessage"]
            </div>
            
            @if (TempData["ResetLink"] != null)
            {
                <div class="alert alert-warning small text-start text-break">
                    <strong>Geliştirici Notu:</strong> Email sunucusu olmadığı için linki burada gösteriyoruz:<br/>
                    <a href="@TempData["ResetLink"]" class="alert-link">Şifre Sıfırlama Linki</a>
                </div>
            }
        }

        <form asp-action="ForgotPassword" method="post">
            @Html.AntiForgeryToken()
            
            <div class="mb-3 text-start">
                <input asp-for="Email" class="form-control" placeholder="E-posta Adresiniz" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-custom mb-3">Bağlantı Gönder</button>
        </form>

        <a asp-action="Login" class="text-muted small text-decoration-none">← Giriş Ekranına Dön</a>
    </div>
</body>
</html>
