@model PastaneProjesi.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sweet Delight</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: var(--color-cream);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .auth-card {
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(93, 64, 55, 0.1);
            width: 100%;
            max-width: 450px;
            text-align: center;
        }
        .auth-title {
            font-family: 'Playfair Display', serif;
            color: var(--color-warm-chocolate);
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
        }
        .form-control {
            border-radius: 10px;
            padding: 0.8rem;
            margin-bottom: 1rem;
        }
        .btn-custom {
            background-color: var(--color-warm-chocolate);
            color: white;
            border-radius: 10px;
            padding: 0.8rem;
            font-weight: 600;
            width: 100%;
            border: none;
            transition: all 0.3s;
        }
        .btn-custom:hover {
            background-color: #4a332d;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="auth-card">
        <h1 class="auth-title">Yeni Şifre Belirle</h1>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger small">
                @ViewBag.ErrorMessage
            </div>
            <a asp-action="ForgotPassword" class="btn btn-outline-secondary w-100">Tekrar Dene</a>
        }
        else
        {
            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />
                
                <div class="text-start">
                    <input asp-for="NewPassword" class="form-control" placeholder="Yeni Şifre" />
                    <span asp-validation-for="NewPassword" class="text-danger small d-block mb-2"></span>
                </div>

                <div class="text-start">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Yeni Şifre (Tekrar)" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mb-2"></span>
                </div>

                <button type="submit" class="btn btn-custom mb-3">Şifreyi Güncelle</button>
            </form>
        }
    </div>
</body>
</html>
