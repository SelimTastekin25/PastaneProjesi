@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sweet Delight</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: var(--color-cream);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .register-card {
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(93, 64, 55, 0.1);
            width: 100%;
            max-width: 450px;
        }
        .register-title {
            font-family: 'Playfair Display', serif;
            color: var(--color-warm-chocolate);
            font-size: 2rem;
            margin-bottom: 0.5rem;
            text-align: center;
        }
        .subtitle {
            text-align: center;
            color: #888;
            margin-bottom: 2rem;
        }
        .form-control {
            border-radius: 10px;
            padding: 0.8rem;
            border: 1px solid #ddd;
            margin-bottom: 1rem;
        }
        .form-control:focus {
            border-color: var(--color-accent-gold);
            box-shadow: 0 0 0 0.2rem rgba(212, 175, 55, 0.25);
        }
        .btn-register {
            background-color: var(--color-warm-chocolate);
            color: white;
            padding: 0.8rem;
            border-radius: 10px;
            width: 100%;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
        }
        .btn-register:hover {
            background-color: #4a332d;
            transform: translateY(-2px);
        }
        .alert-error {
            color: #d9534f;
            background-color: #f9f2f4;
            border-color: #ebccd1;
            padding: 10px;
            border-radius: 10px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }
        .login-link {
            display: block;
            margin-top: 1.5rem;
            text-align: center;
            color: #888;
            text-decoration: none;
            font-size: 0.9rem;
        }
        .login-link a {
            color: var(--color-warm-chocolate);
            font-weight: 600;
            text-decoration: none;
        }
        .login-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="register-card">
        <h1 class="register-title">Kayıt Ol</h1>
        <p class="subtitle">Sweet Delight ailesine katılın!</p>
        
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert-error">
                @ViewBag.ErrorMessage
            </div>
        }

        <form method="post" asp-action="Register">
            @Html.AntiForgeryToken()
            
            <input type="text" name="fullName" class="form-control" placeholder="Ad Soyad" required />
            
            <input type="text" name="username" class="form-control" placeholder="Kullanıcı Adı" required />
            
            <input type="email" name="email" class="form-control" placeholder="E-posta" required />
            
            <input type="password" name="password" class="form-control" placeholder="Şifre" required minlength="6" />
            
            <input type="password" name="confirmPassword" class="form-control" placeholder="Şifre Tekrar" required minlength="6" />
            
            <button type="submit" class="btn-register">Kayıt Ol</button>
        </form>

        <div class="login-link">
            Zaten hesabınız var mı? <a asp-action="Login">Giriş Yap</a>
        </div>

        <a href="/" class="login-link" style="margin-top: 1rem;">← Siteye Dön</a>
    </div>

</body>
</html>
