@model PastaneProjesi.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profilim";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                    <div class="d-inline-block p-3 rounded-circle mb-3" style="background-color: var(--color-vanilla);">
                        <i class="fas fa-user fa-3x" style="color: var(--color-warm-chocolate);"></i>
                    </div>
                    <h2 class="card-title fw-bold" style="color: var(--color-warm-chocolate); font-family: 'Playfair Display', serif;">Profilim</h2>
                    <p class="text-muted">Kişisel bilgilerinizi ve şifrenizi buradan güncelleyebilirsiniz.</p>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success rounded-3 mb-4">
                            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Profile" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-4">
                            <!-- Personal Info Section -->
                            <div class="col-12">
                                <h4 class="mb-3 border-bottom pb-2" style="color: var(--color-warm-chocolate);">Kişisel Bilgiler</h4>
                            </div>

                            <div class="col-md-6 form-group">
                                <label asp-for="UserName" class="form-label text-muted fw-bold small">Kullanıcı Adı</label>
                                <input asp-for="UserName" class="form-control bg-light" readonly />
                                <small class="text-muted d-block mt-1"><i class="fas fa-lock me-1"></i> Kullanıcı adı değiştirilemez.</small>
                            </div>

                            <div class="col-md-6 form-group">
                                <label asp-for="Email" class="form-label text-muted fw-bold small">E-posta Adresi</label>
                                <input asp-for="Email" class="form-control bg-light" readonly />
                                <small class="text-muted d-block mt-1"><i class="fas fa-lock me-1"></i> E-posta adresi değiştirilemez.</small>
                            </div>

                            <div class="col-md-12 form-group">
                                <label asp-for="FullName" class="form-label fw-bold text-dark">Ad Soyad</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted border-end-0"><i class="fas fa-id-card"></i></span>
                                    <input asp-for="FullName" class="form-control border-start-0 ps-0" placeholder="Adınız ve Soyadınız" />
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <!-- Password Change Section -->
                            <div class="col-12 mt-5">
                                <h4 class="mb-3 border-bottom pb-2" style="color: var(--color-warm-chocolate);">Şifre Değiştirme</h4>
                                <div class="alert alert-light border small text-muted">
                                    <i class="fas fa-info-circle me-1"></i> Şifrenizi değiştirmek istemiyorsanız bu alanı boş bırakın.
                                </div>
                            </div>

                            <div class="col-md-12 form-group">
                                <label asp-for="CurrentPassword" class="form-label fw-bold text-dark">Mevcut Şifre</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted border-end-0"><i class="fas fa-key"></i></span>
                                    <input asp-for="CurrentPassword" class="form-control border-start-0 ps-0" placeholder="Mevcut şifreniz" />
                                </div>
                                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 form-group">
                                <label asp-for="NewPassword" class="form-label fw-bold text-dark">Yeni Şifre</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted border-end-0"><i class="fas fa-lock"></i></span>
                                    <input asp-for="NewPassword" class="form-control border-start-0 ps-0" placeholder="Yeni şifreniz" />
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 form-group">
                                <label asp-for="ConfirmNewPassword" class="form-label fw-bold text-dark">Yeni Şifre (Tekrar)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white text-muted border-end-0"><i class="fas fa-check-double"></i></span>
                                    <input asp-for="ConfirmNewPassword" class="form-control border-start-0 ps-0" placeholder="Yeni şifreniz tekrar" />
                                </div>
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-4 text-center">
                                <button type="submit" class="btn btn-custom-primary btn-lg px-5 rounded-pill shadow-sm">
                                    <i class="fas fa-save me-2"></i> Değişiklikleri Kaydet
                                </button>
                                <div class="mt-3">
                                    <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none small hover-underline">İptal</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
