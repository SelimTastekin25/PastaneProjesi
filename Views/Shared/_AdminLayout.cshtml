<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sweet Delight Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> <!-- Keep core styles -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    
    <!-- Sidebar -->
    <nav id="sidebar">
        <div class="sidebar-header">
            <h3><i class="fas fa-cookie-bite"></i> Sweet Delight</h3>
            <p class="text-muted" style="font-size: 0.9em;">Yönetim Paneli</p>
        </div>

        <ul class="list-unstyled components">
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Product" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                <a href="/Product">
                    <i class="fas fa-tachometer-alt me-2"></i> Genel Bakış
                </a>
            </li>
             <li>
                <a href="/Product">
                    <i class="fas fa-box-open me-2"></i> Ürün Yönetimi
                </a>
            </li>
            <li class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Order" && ViewContext.RouteData.Values["Action"]?.ToString() == "Manage" ? "active" : "")">
                <a asp-controller="Order" asp-action="Manage">
                    <i class="fas fa-shopping-cart me-2"></i> Sipariş Yönetimi
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-tags me-2"></i> Kategori Yönetimi
                </a>
            </li>
            <hr class="bg-light" />
             <li>
                <a asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home me-2"></i> Siteye Dön
                </a>
            </li>
        </ul>
    </nav>

    <!-- Page Content -->
    <div class="content-wrapper">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
