@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container my-5 py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="error-content">
                <i class="fas fa-exclamation-circle text-warning mb-4" style="font-size: 5rem;"></i>
                <h1 class="display-4 fw-bold mb-3" style="font-family: 'Playfair Display', serif; color: var(--color-warm-chocolate);">
                    Ops! Bir Şeyler Ters Gitti.
                </h1>
                <p class="lead text-muted mb-4">
                    Aradığınız sayfa taşınmış veya geçici olarak erişilemiyor olabilir. 
                    Lütfen daha sonra tekrar deneyin.
                </p>
                
                @if (Model.ShowRequestId)
                {
                    <div class="alert alert-light border d-inline-block px-4 py-2 mb-4">
                        <small class="text-muted d-block">Hata Kodu (Destek için bu kodu iletin):</small>
                        <code class="fw-bold">@Model.RequestId</code>
                    </div>
                }

                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-custom-primary btn-lg rounded-pill px-5 shadow-sm">
                        <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
